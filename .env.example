# Telegram API credentials (Required)
API_ID=123456
API_HASH=your_api_hash_here
BOT_TOKEN=bot_token_from_botfather_here

# Session string for user account (Required)
SESSION_STRING=your_pyrogram_session_string_here

# Spotify API credentials (Required)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Genius API credentials (Optional but recommended for lyrics)
GENIUS_API_TOKEN=your_genius_api_token_here

# MongoDB URI (Optional - defaults to local files if not provided)
# MONGO_URI=mongodb://username:password@host:port/database

# Custom configuration (Optional)
# DURATION_LIMIT=180  # Maximum duration in minutes for tracks (default: 180)
# COMMAND_PREFIX=/    # Command prefix (default: /)
# CACHE_DIR=cache     # Cache directory (default: cache)
# DATA_DIR=data       # Data directory (default: data)
# DEFAULT_VOLUME=100  # Default volume level (default: 100)
# ADMIN_IDS=123456,789012  # Comma-separated list of admin user IDs